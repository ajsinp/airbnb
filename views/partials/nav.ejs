<header class="bg-red-500 text-white p-4 shadow-md">
  <nav class="container mx-auto">
    <ul class="flex flex-wrap justify-center sm:justify-start gap-2 sm:gap-4">
      <li>
        <a href="/"
          class="<%= currentPage === 'index' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300 block">
          Airbnb
        </a>
      </li>
      <% if(isLoggedIn) { %>
        <li>
          <a href="/homes"
            class="<%= currentPage === 'Home' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300 block">
            Homes-List
          </a>
        </li>

        <li>
          <a href="/favourites"
            class="<%= currentPage === 'favourites' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300 block">
            Favourites
          </a>
        </li>

        <li>
          <a href="/bookings"
            class="<%= currentPage === 'bookings' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300 block">
            Bookings
          </a>
        </li>

        <li>
          <a href="/host/host-home-list"
            class="<%= currentPage === 'host-homes' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300 block">
            Host Homes
          </a>
        </li>

        <li>
          <a href="/host/add-home"
            class="<%= currentPage === 'addHome' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300 block">
            Add Home
          </a>
        </li>
        <% } %>

          <% if(!isLoggedIn) { %>
            <li>
              <a href="/signup" class="hover:bg-red-400' py-2 px-4 rounded transition duration-300 block">
                SignUp
              </a>
            </li>
            <li>
              <a href="/login" class="hover:bg-red-400' py-2 px-4 rounded transition duration-300 block">
                Login
              </a>
            </li>
            <% }else {%>
              <li>
                <form action="/logout" method="POST">
                  <button type="submit" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">
                    Logout
                  </button>
                </form>
              </li>
              <% } %>
    </ul>
  </nav>
</header>