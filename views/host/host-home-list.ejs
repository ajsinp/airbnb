<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
        <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
          Hey Host! Here are your homes:
        </h2>
        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6">
          <% registeredHomes.forEach(home=> { %>
            <li class="bg-white rounded-xl shadow-md hover:shadow-xl transition duration-300 overflow-hidden">
              <img src="<%=home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover" />
              <div class="p-4 space-y-2">
                <h2 class="text-xl font-semibold text-gray-800">
                  <%= home.houseName %>
                </h2>

                <p class="text-gray-500 text-sm">
                  üìç <%= home.location %>
                </p>

                <div class="flex justify-between items-center">
                  <span class="text-lg font-bold text-black">
                    ‚Çπ<%= home.price %> / night
                  </span>

                  <span class="flex items-center text-yellow-500 font-medium">
                    ‚≠ê <%= home.rating %>
                  </span>
                </div>
              </div>
              <a  href="/host/edit-home/<%=home._id%>?editing=true" class="bg-blue-700 p-2">Edit</a>
              <form action="/host/delete-home/<%= home._id%>" method="POST">
                <button type="submit" class="bg-red-700 p-2">Delete</button>
              </form>
              
            </li>
            <% }) %>
        </ul>

      </main>
  </body>

  </html>